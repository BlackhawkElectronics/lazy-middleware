{
    "name": "northwoods/lazy-middleware",
    "description": "Lazy loading for middleware and request handlers",
    "keywords": [
        "http",
        "psr-15",
        "middleware",
        "handler",
        "request",
        "lazy",
        "proxy",
        "container"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Woody Gilk",
            "email": "woody.gilk@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Northwoods\\Middleware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Northwoods\\Middleware\\": "tests"
        }
    },
    "require": {
        "php": "^7.2",
        "psr/container": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.1",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-phpunit": "^0.11",
        "phpunit/phpunit": "^8.3",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts": {
        "analyze": "phpstan analyse -l max -c phpstan.neon src tests --no-progress",
        "check": "phpcs -n",
        "test": "phpunit --testdox",
        "ci": ["@analyze", "@check", "@test"]
    }
}
