{
    "name": "blackhawkelectronics/lazy-middleware",
    "type": "library",
    "description": "Lazy loading for middleware and request handlers",
    "keywords": [
        "http",
        "psr-15",
        "middleware",
        "handler",
        "request",
        "lazy",
        "proxy",
        "container"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Woody Gilk",
            "email": "woody.gilk@gmail.com"
        },
        {
            "name": "Benjamin Plain",
            "email": "benjamin@blackhawkelectronics.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "psr/container": ">=1.1.2",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.5",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "BlackhawkElectronics\\Middleware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BlackhawkElectronics\\Middleware\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "analyze": "phpstan analyse -l max -c phpstan.neon src tests --no-progress",
        "check": "phpcs -n",
        "test": "phpunit --testdox"
    }
}
